            for (var r = 0; r < dados.length; r++) {
                html += "<tr style='text-align:center;'>";
                html += "<td></td>";
                html += "<td>" + dados[r].departamento + "</td>";
                html += "<td>" + dados[r].maquina + "</td>";
                html += "<td>" + dados[r].parteMaquina + "</td>";
                html += "<td>" + dados[r].nome + "</td>";


