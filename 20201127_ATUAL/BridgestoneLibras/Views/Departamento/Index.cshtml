                    $("#lstStatus").prop('disabled', true);
                } else {
                    $("#lstStatus").prop('disabled', false);
                    $.each(obj, function (i, index) {
                        $("#lstStatus").append(
                            $('<option></option>').val(index.value).html(index.text));
                    })
                    $("#lstStatus").prop('selectedIndex');
                }
