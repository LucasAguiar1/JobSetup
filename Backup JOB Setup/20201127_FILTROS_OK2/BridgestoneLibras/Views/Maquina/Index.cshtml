    function Limpar() {
        $("#lstStatus").val(0);
        $("#lstDepartamento").val(0);
        $("#idNomeMaquina").val("");
        $("#lstDepartamento").prop('disabled', false);
        $("#btnAlterar").prop('disabled', true);
        $("#btnCadastrar").prop('disabled', false);
        $("#conteudo").empty();
        ConsultarGrid();
    }


</script>

